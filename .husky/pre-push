#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Checking for uncommitted changes..."
if ! git diff-index --quiet HEAD --; then
  echo "âŒ You have uncommitted changes. Please commit or stash them before pushing."
  exit 1
fi

echo "ğŸ” Checking for untracked files..."
if [ -n "$(git ls-files --others --exclude-standard)" ]; then
  echo "âŒ You have untracked files. Please add them to .gitignore or commit them before pushing."
  exit 1
fi

echo "ğŸ”¨ Running build..."
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix the build errors before pushing."
  exit 1
fi

echo "âœ… Build passed! Proceeding with push..."
